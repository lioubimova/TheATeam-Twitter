
<div id="header">
  <div style="background-color:#6699ff;padding:15px;">
  <h1 style="color:red">Twitterchen</h1>
</div>
<br>
<br>
<div class= "container">
  <%= link_to "Home", root_path %>
</div>
<br>
<br>

<div class="container-fluid" style="float: right">
  <br>

  <% if @current_user %>
    <%= button_to "Post", new_post_path, :class => "btn btn-primary", method: :get %>
    <%= button_to "Log out", user_session_path(@current_user), :class => "btn btn-primary", method: :delete %>
  <% else %>
    <%= button_to "Log in", new_user_session_path, :class => "btn btn-primary", method: :get %>
    <%= button_to "Sign up", new_user_path, :class => "btn btn-primary", method: :get %>
  <% end %>
</div>
<% if @current_user %>
  <div class="container">
    <table class="table">
        <tbody>
          <% @posts.timeline(@current_user).each do |post| %>
          <tr class="table-row">
            <td><%= link_to "#{post.user.username}",user_path(post.user.id) %> said: </td>
            <td><%= post.message %></td>
            <td><%= link_to "Show", post %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
<% else %>
  <div class="container">
    <table class="table">
        <tbody>
          <% @posts.each do |post| %>
          <tr class="table-row">
            <td><%= link_to "#{post.user.username}",user_path(post.user.id) %> said: </td>
            <td><%= post.message %></td>
            <td><%= link_to "Show", post %></td>
          </tr>
          <% end %>
        </tbody>
    </table>
  </div>
<% end %>
<br>
<div class="container"
<%= paginate @posts %>
<%= page_entries_info @posts %>
</div>
